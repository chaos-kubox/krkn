{
  "apiVersion": "apps/v1",
  "kind": "Deployment",
  "metadata": {
    "name": "load",
    "labels": {
      "service": "load"
    }
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "matchLabels": {
        "service": "load"
      }
    },
    "template": {
      "metadata": {
        "labels": {
          "service": "load"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "load",
            "env": [
              {
                "name": "HOST",
                "value": "http://chaos.sl.cloud9.ibm.com:8080"
              },
              {
                "name": "NUM_CLIENTS",
                "value": "10000000"
              },
              {
                "name": "SILENT",
                "value": "0"
              },
              {
                "name": "ERROR",
                "value": "1"
              }
            ],
            "image": "robotshop/rs-load:latest",
            "resources": {
              "limits": {
                "cpu": "500m",
                "memory": "500Mi"
              },
              "requests": {
                "cpu": "500m",
                "memory": "500Mi"
              }
            }
          }
        ]
      }
    }
  }
}
